<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/main_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:titleTextAppearance="@style/ToolbarTitle"/>

        <LinearLayout
            android:id="@+id/recycler_view_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <org.jorge.lazyrecyclerview.demo.ui.widget.StatsView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:sv_title="@string/stat_title_standard"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/traditional_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fadeScrollbars="true"
                    android:scrollbars="vertical"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <org.jorge.lazyrecyclerview.demo.ui.widget.StatsView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:sv_title="@string/stat_title_lazy"/>

                <org.jorge.lazyrecyclerview.LazyRecyclerView
                    android:id="@+id/lazy_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fadeScrollbars="true"
                    android:scrollbars="vertical"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@android:id/empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:attr/windowBackground"
            android:gravity="center"
            android:text="@string/no_items"
            android:textColor="@android:color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_anchor="@+id/main_content"
        app:layout_anchorGravity="bottom|left|start"
        app:layout_behavior="org.jorge.lazyrecyclerview.demo.ui.extension.PushBehavior">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="8dp"
            android:scaleType="center"
            android:src="@drawable/ic_add"
            app:borderWidth="0dp"
            app:fabSize="normal"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="8dp"
            android:scaleType="center"
            android:src="@drawable/ic_remove"
            android:theme="@style/RedAccent"
            app:borderWidth="0dp"
            app:fabSize="normal"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="8dp"
            android:scaleType="center"
            android:src="@drawable/ic_more"
            android:theme="@style/AmberAccent"
            app:borderWidth="0dp"
            app:fabSize="normal"/>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>