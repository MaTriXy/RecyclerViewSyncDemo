<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorBackground">@android:color/white</item>
        <item name="colorAccent">@color/material_indigo_500</item>
        <item name="colorPrimary">@color/material_indigo_a200</item>
    </style>

    <style name="DemoAdapterItem">
        <item name="android:gravity">center</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="StatsText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="RedAccent">
        <item name="colorAccent">@color/material_red_500</item>
    </style>

    <style name="AmberAccent">
        <item name="colorAccent">@color/material_amber_500</item>
    </style>

    <style name="RecyclerViewSyncDemoTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/white</item>
    </style>
</resources>